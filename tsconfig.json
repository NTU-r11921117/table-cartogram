{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false
    },
    "include": [
      "types.ts",
      "showcase/**/*",
      "src/**/*",
      "test/**/*",
      "index.ts",
      "untyped/index.d.ts"
    ],
    "exclude": [
      "showcase/node_modules/**/*",
      "node_modules/**/*"
    ]
}
